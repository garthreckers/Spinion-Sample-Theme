{% extends 'views/extendables/base.twig' %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h1>Sample Archive Page</h1>
				{% if posts %}
					<ul>
					{% for p in posts %}
						<li><a href="{{ p.link }}">{{ p.name }}</a></li>
					{% endfor %}
					</ul>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}